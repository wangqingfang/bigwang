<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.CountersMapper">

    <resultMap id="countersMapper" type="com.tencent.wxcloudrun.model.Counter">
        <id property="id" column="id"/>
        <result property="count" column="count"/>
        <result property="createdAt" column="createdAt" javaType="java.time.LocalDateTime" />
        <result property="updatedAt" column="updatedAt" javaType="java.time.LocalDateTime"  />
    </resultMap>

    <select id="getCounter" resultMap="countersMapper" parameterType="java.lang.Integer">
        SELECT `id`, `count`, `createdAt`, `updatedAt`
        FROM Counters
        WHERE id = #{id}
    </select>

    <delete id="clearCount" parameterType="java.lang.Integer">
        DELETE
        FROM Counters
        where id = #{id}
        limit 1
    </delete>

    <update id="upsertCount" parameterType="com.tencent.wxcloudrun.model.Counter">
        INSERT INTO `Counters`(`id`, `count`)
        VALUE(#{id}, #{count}) 
        ON DUPLICATE KEY UPDATE count=#{count}
    </update>

     <select id="getIndexInfo" resultMap="countersMapper" parameterType="java.lang.Integer">
        SELECT 
            L.LedgerID,                             -- 账本ID
            L.LedgerName,                           -- 账本名
            COUNT(DISTINCT LP2.UserID) AS MemberCount, -- 参与该账本的成员数
            L.RecordCount                           -- 账本记录数
        FROM 
            LedgerParticipant LP                   -- 账本参与者表 (当前用户的参与信息)
        JOIN 
            Ledger L ON LP.LedgerID = L.LedgerID   -- 连接到账本表，获取账本信息
        JOIN 
            LedgerParticipant LP2 ON L.LedgerID = LP2.LedgerID -- 连接回账本参与者表，用于统计成员数
        WHERE 
            LP.UserID = #{id}                        -- 当前用户的UserID
        GROUP BY 
            L.LedgerID, L.LedgerName, L.RecordCount;
    </select>

</mapper>
